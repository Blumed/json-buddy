{
    "name": "Json Buddy",
    "description": "Json tool for better visual",
    "version": "1.0.0",
    "manifest_version": 3,
    "web_accessible_resources": [{ 
        "resources": ["index.html"],
        "matches": ["<all_urls>"]
    }],
    "permissions": [],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["https://*/*.json"]
    }],
    "action": {
      "default_title": "Svelte Extension",
      "default_icon": "favicon.png",
      "default_popup": "index.html"
    }
  }